<?xml version="1.0" encoding="utf-8"?>
<com.example.smalllee.myapplication.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoDragView="@+id/fl_container_view"
    sothree:umanoOverlay="false"
    sothree:umanoPanelHeight="100dp"
    sothree:umanoParallaxOffset="0dp"
    sothree:umanoShadowHeight="0dp">
    <!--内容区域-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="标题View"
            android:background="#00ffff"
            android:visibility="gone"
            />
    </LinearLayout>
    <!--面板区域-->
    <FrameLayout
        android:id="@+id/fl_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="可滑动部分"
            android:background="#ff0000"
            />
    </FrameLayout>
</com.example.smalllee.myapplication.SlidingUpPanelLayout>
